<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_cardview"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_student_options"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/menu_icon"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/text_view_student_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/text_view_student_options"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Full name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_student_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_student_full_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="class" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>